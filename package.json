{
  "name": "light-and-code-blog",
  "version": "1.0.0",
  "description": "融合摄影艺术与编程技术的个人博客系统",
  "main": "index.html",
  "scripts": {
    "dev": "firebase emulators:start",
    "dev:ui": "firebase emulators:start --only firestore,auth,storage",
    "serve": "npx http-server -p 8000 -c-1",
    "build": "echo 'No build step required for this project'",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "deploy:preview": "firebase hosting:channel:deploy preview --expires 7d",
    "deploy:staging": "firebase hosting:channel:deploy staging --expires 30d",
    "deploy:production": "firebase deploy --only hosting --project production",
    "deploy:auto": "node scripts/deploy-automation.js",
    "rollback": "node scripts/rollback.js",
    "init:firebase": "firebase init",
    "setup": "npm install -g firebase-tools && firebase login",
    "seed": "node scripts/seed-data.js",
    "backup": "node scripts/backup-data.js",
    "validate": "node scripts/validate-config.js",
    "precheck": "npm run validate && echo 'Pre-deployment checks passed'",
    "postdeploy": "echo 'Deployment completed! Running post-deployment checks...'",
    "ci": "npm run lint && npm run test:coverage && npm run test:e2e",
    "ci:full": "npm run ci && npm run test:lighthouse && npm run test:accessibility",
    "firebase:setup": "node scripts/firebase-auto-setup.js",
    "firebase:quick": "node scripts/firebase-quick-setup.js",
    "firebase:wizard": "node scripts/firebase-wizard.js",
    "firebase:login": "firebase login",
    "firebase:deploy": "firebase deploy",
    "firebase:serve": "firebase serve",
    "firebase:hosting": "firebase deploy --only hosting",
    "firebase:check": "node check-deployment.js",
    "deploy:check": "node check-deployment.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:lighthouse": "node tests/performance/lighthouse.js",
    "test:accessibility": "node tests/accessibility/axe-test.js",
    "test:all": "npm run test && npm run test:e2e && npm run test:lighthouse",
    "lint": "eslint js/ --ext .js",
    "lint:fix": "eslint js/ --ext .js --fix",
    "format": "prettier --write js/ tests/ *.md *.json",
    "format:check": "prettier --check js/ tests/ *.md *.json",
    "prepare": "husky install"
  },
  "keywords": [
    "blog",
    "photography",
    "programming",
    "firebase",
    "javascript",
    "tailwindcss"
  ],
  "author": "摄影程序员",
  "license": "MIT",
  "devDependencies": {
    "firebase-tools": "^12.0.0",
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/dom": "^9.3.0",
    "puppeteer": "^21.0.0",
    "lighthouse": "^11.0.0",
    "axe-core": "^4.8.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/light-and-code-blog.git"
  },
  "bugs": {
    "url": "https://github.com/username/light-and-code-blog/issues"
  },
  "homepage": "https://lightandcode.com"
}